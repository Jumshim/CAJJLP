commands:
  add_packs_location_to_nginx:
    command: >
      if ! grep -q 'location /builds' /opt/elasticbeanstalk/config/private/nginx/webapp.conf; then
      sed -i '$a\\nlocation /builds {\n    alias
      /var/app/current/public/assets/builds;\n    gzip_static on;\n    gzip
      on;\n    expires max;\n    add_header Cache-Control  public;\n}'
      /opt/elasticbeanstalk/config/private/nginx/webapp.conf
      fi